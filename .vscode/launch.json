{
    "version": "0.2.0",
    "configurations": [
        // Session with redis backend
        {
            "name": "Session Redis backend",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/services/session/main.go", 
            "args": [
                "--address",
                "localhost:8080",
                "--backend", 
                "redis", 
                "--redis-endpoint",
                "localhost:6379"
            ] 
        }, 

        // Session with memory backend
        {
            "name": "Session Memory backend",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/services/session/main.go", 
            "args": [
                "--address",
                "localhost:8080",
                "--backend", 
                "memory", 
            ] 
        },

        // Session with Dynamodb backend
        {
            "name": "Session Dynamodb backend",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/services/session/main.go", 
            "args": [
                "--address",
                "localhost:8080",
                "--backend", 
                "dynamodb",
            ] 
        },

        // Client
        {
            "name": "Client",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/services/client/main.go", 
            "args": [
                "--retriesCount", 
                "3"
            ] 
        }
    ]
}